rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para Usuários (Ver perfil, editar)
    match /users/{userId} {
      allow read, write: if request.auth != null; // Permite leitura para contagem no admin
    }

    // Regras para o Blog (Público pode ler, Admin pode escrever)
    match /blog/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para Pontuações (Notas)
    match /pontuacoes/{document=**} {
      // Admin lê tudo para o gráfico, Aluno cria nota ao terminar desafio
      allow read, create: if request.auth != null;
    }
    
    // Regras para Likes
    match /likes/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para Admins
    match /admins/{userId} {
      allow read: if request.auth != null;
    }
  }
}